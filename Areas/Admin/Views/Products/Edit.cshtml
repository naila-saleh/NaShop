@model Product

@section heading
{
    Products
}
@section heading2
{
    Products
}
@section title
{
    Edit
}
@section style
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>
}
<form method="post" action="/Admin/Products/Edit/@Model.Id" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="name">Name</label>
        <input name="Name" value="@Model.Name" type="text" class="form-control" id="name" placeholder="Enter Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label for="description">Description</label>
        <textarea name="Description" class="form-control" id="description" placeholder="Enter Description">@Model.Description</textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label for="price">Price</label>
        <input name="Price" value="@Model.Price" type="number" class="form-control" id="price" placeholder="Enter Price"/>
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label for="quantity">Quantity</label>
        <input name="Quantity" value="@Model.Quantity" type="number" class="form-control" id="quantity" placeholder="Enter Quantity"/>
        <span class="text-danger" asp-validation-for="Quantity"></span>
    </div>
    <div class="mb-3">
        <label for="image">Image</label>
        <img src="/images/@Model.Image" width="300px"/>
        <input name="Image" type="file" class="form-control" id="image"/>
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <div class="mb-3">
        <label for="categories">Categories</label>
        <select name="CategoryId" class="form-control" id="categories">
            @foreach (var item in ViewBag.Categories)
            {
                if (item.Id == Model.CategoryId)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="companies">Companies</label>
        <select name="CompanyId" class="form-control" id="companies">
            @foreach (var item in ViewBag.Companies)
            {
                if (item.Id == Model.CompanyId)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
    </div>
    <div class="mb-1">
        <button type="submit" class="btn btn-outline-primary">Update</button>
    </div>
</form>
@section script
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @if (TempData["success"] is not null)
    { 
        <script>toastr.success('@TempData["success"]')</script>
    }
}